#!/bin/sh
trap cleanup 1 2 3 6
downpid=
cleanup()
{
	kill -9 $downpid
	rm $HOME/youtube
}
url=
opts=
stop="no"
if [ -z "$1" ]; then
	url=$(xclip -o | sed -e 's/https/http/g')
else
	url=$(echo "$1" | sed -e 's/https/http/g')
fi
youtube-dl $opts --no-part -o ~/youtube "$url" &
downpid=$!
sleep 5
mplayer ~/youtube
