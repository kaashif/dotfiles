set imap_user = "kaashif@kaashif.co.uk"
set smtp_url = "smtp://kaashif@kaashif.co.uk@smtp.zoho.com:587/"
set ssl_starttls = yes
set from = "kaashif@kaashif.co.uk"
set editor = 'emacsclient'
set mbox_type=Maildir
set folder = "~/mail/"
set spoolfile = "~/mail/inbox/"
set hostname = kaashif.co.uk
set mail_check = 120
set timeout = 300
set imap_keepalive = 300
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certificates
set move = no
set include
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set auto_tag = yes
set pager_index_lines = 10
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop
bind index "^" imap-fetch-mail

color normal default default
color body     brightblue default (https?|ftp)://[\-\.\,/%~_:?\#a-zA-Z0-9]+
color hdrdefault cyan default
color signature cyan default
color tree brightred default
color quoted brightgreen default
color quoted1 brightred default
color quoted2 brightgreen default
color tilde cyan default
color status default cyan

set signature="~/.signature"
